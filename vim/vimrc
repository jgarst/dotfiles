" moving vimrc enables vi compatibility. Disable it here.
set nocompatible

" file locations
set directory=$XDG_CACHE_HOME/vim,~/,/tmp
set backupdir=$XDG_CACHE_HOME/vim,~/,/tmp
set viminfo+=n$XDG_CACHE_HOME/vim/viminfo
set runtimepath=$XDG_CONFIG_HOME/vim
    \,$XDG_CONFIG_HOME/vim/after
    \,$VIM
    \,$VIMRUNTIME
    \,/usr/share/vim/vimfiles
let $MYVIMRC="$XDG_CONFIG_HOME/vim/vimrc"

" line numbers
set relativenumber
set number

" syntax highlighting
filetype plugin on
syntax on

" set tabs to 4 spaces
set tabstop=4
set shiftwidth=4
set expandtab

" tab, trailing whitespace, nonbreaking space, end of line, line continuation
set list listchars=tab:│\ ,trail:·,nbsp:·,eol:¬,precedes:«,extends:»

" gruvbox colorscheme
set termguicolors
let g:gruvbox_italic=1
colorscheme gruvbox

" smart line breaking
set linebreak

" spell checking
set spell

" have yanking use system clipboard
set clipboard=unnamedplus
