source vim-keys.rc


# Maildir is an alternate mail storage format
set mbox_type = Maildir
set folder = ~/mail
set spoolfile = +jhg/INBOX

# Specify where to save and/or look for postponed messages.
set postponed = "jhg/Drafts"
set mbox = "jhg/Archive"
set trash = "+jhg/Trash"

set timeout = 3     # idle time before scanning
set mail_check = 0  # minimum time between scans
set pipe_decode     # strip headers and eval mimes when piping

mailboxes +jhg/INBOX \
          +jhg/archive \
          +jhg/sent \
          +jhg/drafts


set sidebar_visible = yes
set sidebar_width = 24

set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"



# do not duplicate sent saving
unset record

set realname = "Jared Hall Garst"
set from = "jhg@fastmail.com"
set use_from = yes

set smtp_url = smtps://$imap_user:$imap_pass@smtp.fastmail.com
