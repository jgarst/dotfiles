XDG_CONFIG_HOME         DEFAULT=@{HOME}/config
XDG_DATA_HOME           DEFAULT=@{HOME}/local/share
XDG_CONFIG_HOME         DEFAULT=@{HOME}/config
XDG_CACHE_HOME          DEFAULT=@{HOME}/cache
XDG_DATA_DIRS           DEFAULT=/usr/local/share/:/usr/share
XDG_CONFIG_DIRS         DEFAULT=/etc/xdg
XKB_DEFAULT_OPTIONS     DEFAULT=caps:escape

PASSWORD_STORE_DIR      DEFAULT=@{HOME}/pass

EDITOR                  DEFAULT=nvim
GOPATH                  DEFAULT=@{HOME}/go
BROWSER                 DEFAULT=/usr/bin/firefox

PATH                    DEFAULT=@{HOME}/bin:${XDG_CONFIG_HOME}/bin:${PATH}
PYTHONPATH              DEFAULT=@{HOME}/lib/python
IPYTHONDIR              DEFAULT=${XDG_DATA_HOME}/ipython
JUPYTER_CONFIG_DIR      DEFAULT=${XDG_DATA_HOME}/jupyter

HISTFILE                DEFAULT=${XDG_DATA_HOME}/shell_history
HISTSIZE                DEFAULT=100000
SAVEHIST                DEFAULT=${HISTSIZE}

SQLITE_HISTORY          DEFAULT=${XDG_DATA_HOME}/sqlite_history

NOTMUCH_CONFIG          DEFAULT=@{HOME}/config/notmuch-config

CARGO_HOME              DEFAULT=${XDG_DATA_HOME}/cargo

GNUPGHOME               DEFAULT=${XDG_DATA_HOME}/gnupg

XINITRC                 DEFAULT=${XDG_CONFIG_HOME}/X11/xinitrc
XSERVERRC               DEFAULT=${XDG_CONFIG_HOME}/X11/xserverrc

PSQLRC                  DEFAULT=${XDG_CONFIG_HOME}/pg/psqlrc
PSQL_HISTORY            DEFAULT=${XDG_CACHE_HOME}/pg/psql_history
PGPASSFILE              DEFAULT=${XDG_CONFIG_HOME}/pg/pgpass
PGSERVICEFILE           DEFAULT=${XDG_CONFIG_HOME}/pg/pg_service.conf

ZDOTDIR                 DEFAULT=${XDG_CONFIG_HOME}/zsh

MOZ_ENABLE_WAYLAND      DEFAULT=1
BEMENU_BACKEND          DEFAULT=wayland
QT_QPA_PLATFORM         DEFAULT=wayland-egl

NO_UPDATE_NOTIFIER      DEFAULT=true

CHROME_CONFIG_HOME      DEFAULT=${XDG_DATA_HOME}

RBENV_ROOT              DEFAULT=${XDG_DATA_HOME}/rbenv

