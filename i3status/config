# configuration for i3status.  Conforms to `man i3status` specification

general
{
    colors = true
    interval = 5
    color_good = "#98971a"
    color_degraded = "#d79921"
    color_bad = "#cc241d"
}

order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "disk /"
order += "load"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_
{
    format_up = "WIFI %quality %essid (%ip)"
    format_down = "W: down"
}

ethernet _first_
{
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery all
{
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
}

disk "/"
{
    format = "DISK %avail"
}

# Number of processes waiting for CPU time in the last n minutes
load
{
    format = "LOAD %1min"
}

cpu_usage
{
    format = "CPU  %cpu0  %cpu1  %cpu2  %cpu3"
}

memory
{
    format = "MEM %used / %available"
    threshold_degraded = "1G"
    format_degraded = "MEM %used / %available"
}

tztime local
{
    format = "%Y-%m-%d %H:%M"
}

volume master
{
    format = "VOLUME %volume"
    format_muted = "VOLUME (%volume)"
}
